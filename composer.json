{
	"name": "nickjbedford/laravel-endpoints",
	"description": "The Laravel Endpoints framework provides an easy way to implement API endpoints in separate Responsable-style classes.",
	"minimum-stability": "stable",
	"type": "library",
    "keywords": [
		"json", "api", "rest"
	],
	"license": "MIT",
	"authors": [
		{
			"name": "Nick Bedford",
			"email": "email@nickbedford.com"
		}
	],
	"require": {
		"php": "^8.2",
		"laravel/framework": ">=8",
        "nickjbedford/json-response-laravel": "*",
		"ext-json": "*"
	},
	"require-dev": {
        "phpunit/phpunit": "9.*",
		"orchestra/testbench": "*"
	},
    "autoload": {
        "psr-4": {
            "YetAnother\\Laravel\\": "src/"
        }
    },
	"autoload-dev": {
		"psr-4": {
			"YetAnother\\Tests\\": "tests/"
		}
	}
}
